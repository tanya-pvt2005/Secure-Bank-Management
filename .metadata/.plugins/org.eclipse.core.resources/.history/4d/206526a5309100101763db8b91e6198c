package com.securebank;

import java.util.Scanner;

public class Main {
	
	//basic admin login
	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
        String adminUser = "admin";   // hardcoded admin username
        String adminPass = "##Admin"; // hardcoded admin password
        
        System.out.println("=== Welcome to Bank Management App ===");
        
        System.out.print("Enter admin username: ");
        String username = sc.nextLine();

        System.out.print("Enter admin password: ");
        String password = sc.nextLine();
        
        if(adminUser.equals(username) && adminPass.equals(password)) {
            System.out.println("Login successful!\n");
            // Here we will show admin menu next
            
            boolean exit = false;
            System.out.println("=== Admin Menu ===");
            System.out.println("1. Create User");
            System.out.println("2. Create Account for a User");
            System.out.println("3. Make Transaction");
            System.out.println("4. Exit");
            System.out.print("Enter your choice: ");
            
            int choice = sc.nextInt();
            sc.nextLine();
            
            switch (choice) {
            case 1:
                System.out.println("You selected: Create User");
                // We will add account creation code here later
                break;
            case 2:
                System.out.println("You selected: Create Account for User");
                // We will add transaction code here later
                break;
            case 3:
                System.out.println("You selected: Make Transaction");
                // We will add transaction code here later
                break;
            case 4:
                System.out.println("Exiting... Goodbye!");
                exit = true;
                break;
            default:
                System.out.println("Invalid choice. Try again.");
        }
        System.out.println(); // blank line for readability
        
        } else {
            System.out.println("Invalid credentials. Exiting...");
        }

        sc.close();
	}

}
